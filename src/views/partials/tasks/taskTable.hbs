{{#if tasks}}
  <table class="table table-bordered table-hover table-info">
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th>Operacion</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{tittle}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-dark"
              >NoHecho</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-success"
              >Hecho</a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Eliminar</a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Actualizar</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content center">
    <div class="text-center text-white">
      <h1> No hay tareas que mostrar</h1>
      <img src="/icons/error.png" alt="" />
    </div>
  </div>
{{/if}}