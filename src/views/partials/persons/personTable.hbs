{{#if person}}
  <table class="table table-bordered table-hover table-info">
    <thead>
      <tr>
        <th>N.</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>DocIdentidad</th>
        <th>Email</th>
        <th>Telefono</th>
      </tr>
    </thead>
    <tbody>
      {{#each person}}
        <tr>
          <td>{{@index}}</td>
          <td>{{nombre}}</td>
          <td>{{apellido}}</td>
          <td>{{email}}</td>
          <td>{{celular}}</td>
          <td>
            
            <a href="/person/{{_id}}/delete" class="btn btn-danger">Eliminar</a>
            <a href="/person/{{_id}}/edit" class="btn btn-info">Actualizar</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content center">
    <div class="text-center text-white">
      <h1> No hay personas que mostrar</h1>
      <img src="/icons/error.png" alt="" />
    </div>
  </div>
{{/if}}